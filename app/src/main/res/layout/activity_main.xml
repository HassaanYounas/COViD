<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/topText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="47dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Welcome to, COViD"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some tips to,"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:textSize="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/light_pink"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_avoid"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fight against"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Covid"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15dp"/>

                        <Button
                            android:id="@+id/fightBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Gear Up"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:background="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:elevation="0dp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/light_pink"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_heart"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recover from"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="20dp"
                            android:textSize="15dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Covid"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15dp"/>

                        <Button
                            android:id="@+id/recoverBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Heal"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:background="@color/white"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="25dp"
                            android:elevation="0dp"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Location:"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="22dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24dp"
                android:layout_marginLeft="24dp" />

            <EditText
                android:id="@+id/searchCountryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a country"
                android:layout_marginHorizontal="24dp"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/light_grey"
                android:drawableLeft="@drawable/ic_location"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center"
                android:text="Search"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:elevation="0dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/light_pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="30dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/casesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="15dp"/>

                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="0, 1, 3"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp">
                        <TableRow>
                            <TextView
                                android:text="Total"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12dp"
                                android:layout_marginLeft="2dp"/>
                            <TextView
                                android:text="Active"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12dp"
                                android:layout_marginLeft="2dp"/>
                            <TextView
                                android:text="Recovered"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12dp"
                                android:layout_marginLeft="4dp"/>
                            <TextView
                                android:text="Deaths"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="12dp"/>
                        </TableRow>
                    </TableLayout>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/casesBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="30dp"
                        android:background="@color/lightest_pink"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/pink"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>